<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addPasswordFragment"
            app:destination="@id/addPasswordFragment" />
        <action
            android:id="@+id/action_homeFragment_to_passwordDetailFragment"
            app:destination="@id/passwordDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_passwordGenerateFragment"
            app:destination="@id/passwordGenerateFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPasswordFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.add.AddPasswordFragment"
        android:label="Add Password"
        tools:layout="@layout/fragment_add_password" />

    <fragment
        android:id="@+id/passwordDetailFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.detail.PasswordDetailFragment"
        android:label="Password Detail"
        tools:layout="@layout/fragment_password_detail">
        <argument
            android:name="password"
            app:argType="com.mahmutalperenunal.passwordbook.data.PasswordEntity" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/passwordGenerateFragment"
        android:name="com.mahmutalperenunal.passwordbook.ui.generate.PasswordGenerateFragment"
        android:label="Generate Password"
        tools:layout="@layout/fragment_password_generate" />
</navigation>